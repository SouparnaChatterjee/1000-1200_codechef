#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
    int t,n;
    string s;
    cin>>t;
    int count;
    while(t--)
    {
        cin>>n;
        count=0;
        cin>>s;
        for(int i=0;i<n;i++)
        {
            if(s[i]=='1' && s[i+1]=='0')
            count++;
        }
        cout<<count<<endl;
    }
}
