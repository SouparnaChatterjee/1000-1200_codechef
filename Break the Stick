#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
    int t;
    cin>>t;
    while(t--)
    {
        int n,x;
        cin>>n>>x;
        if(n%2==0 && x%2==0)
        {
            cout<<"Yes"<<endl;
        }
        if(n%2==0 && x%2!=0)
        {
            cout<<"Yes"<<endl;
        }
        if(n%2!=0 && x%2!=0)
        cout<<"Yes"<<endl;
        if(n%2!=0 && x%2==0)
        cout<<"No"<<endl;
    }
}
