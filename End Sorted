#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
    int t,a, b, n;
    cin>>t;
    while(t--)
    {
        cin>>n;
        int p[n];
        for(int i=0;i<n;i++)
        {
            cin>>p[i];
            if(p[i]==1)
            a=i;
            else if(p[i]==n)
            b=i;
        }
        cout<<a-(b<a)+(n-b-1)<<endl;
    }
}
